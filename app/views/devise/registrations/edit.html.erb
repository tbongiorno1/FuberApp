<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div class="page-header">
        <h2>Settings</h2>
      </div>
      <%= render partial: "admins/partials/sidenav" %>
    </div>
    <div class="col-lg-9">
      <div class="row">
        <div class="col-lg-6">
          <div class="page-header">
            <h2>Edit <%= resource_name.to_s.humanize %></h2>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: "form-control input-lg", disabled: true %>
            </div>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control input-lg" %>
            </div>
            <div class="form-group">
              <%= f.label :lastname %>
              <%= f.text_field :lastname, class: "form-control input-lg" %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="form-group">
              <%= f.label :password %>
              <small class="text-muted">(leave blank if you don't want to change it)</small>
              <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
              <% if @minimum_password_length %>
                <small class="text-muted">
                  <%= @minimum_password_length %> characters minimum
                </small>
              <% end %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
            </div>
            <div class="form-group">
              <%= f.label :current_password %>
              <small class="text-muted">(we need your current password to confirm your changes)</small>
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control input-lg" %>
            </div>
            <div class="form-group">
              <%= f.submit "Update", class: "btn btn-success btn-lg btn-block" %>
            </div>
            <div class="page-header">
              <h2>Profile Image</h2>
            </div>
            <div class="form-group">
              <%= f.label :profile_image %>
              <% if @admin.profile_image.nil? %>
                <%= f.attachment_field :profile_image, direct: true, presigned: true, class: "form-control" %>
              <% end %>
            </div>
            <div class="form-group">
              <% if @admin.profile_image_id? %>
                <%= image_tag attachment_url(@admin, :profile_image, :fill, 50, 50, format: "jpg", fallback: "missing.png") %>
                <%= f.check_box :remove_profile_image %>
                <%= f.label :remove_profile_image %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="col-lg-6">
          <div class="page-header">
            <h2 class="text-muted">Cancel my account</h2>
          </div>
          <p>
            Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-lg btn-block" %>
          </p>
          <hr>
          <div class="form-group text-center">
            <%= link_to "Back", :back %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
