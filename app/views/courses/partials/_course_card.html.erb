<% @courses.last(4).reverse_each do |course| %>
  <%= link_to course do %>
    <div class="col-lg-3">
      <div class="panel panel-default">
        <%= image_tag attachment_url(course, :course_image, :fill, 350, 250, format: "jpg", fallback: "http://placehold.it/350x250"), class: "img-responsive" %>
        <div class="panel-body">
          <h3><%= course.name %></h3>
          <p><%= course.tagline %></p>
        </div>
        <div class="panel-footer">
          <div class="media">
            <div class="media-left">
              <%= image_tag attachment_url(course.admin, :profile_image, :fill, 140, 140, format: "jpg", fallback: "missing.png"), class: "media-object img-circle img-profile", draggable: false %>
            </div>
            <div class="media-body">
              <h5 class="media-heading"><%= course.admin.full_name %></h5>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
