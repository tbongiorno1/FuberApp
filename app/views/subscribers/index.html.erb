<% if admin_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <div class="page-header">
          <h2>Settings</h2>
        </div>
        <%= render partial: "admins/partials/sidenav" %>
      </div>
      <div class="col-lg-9">
        <div class="page-header">
          <ol class="breadcrumb">
            <li><%= link_to "Courses", courses_path %></li>
            <li class="active"><%= link_to "Subscribers", subscribers_path %></li>
          </ol>
        </div>
        <table class="table table-striped table-condensed table-responsive table-hover">
          <thead>
            <tr>
              <th class="text-center">#</th>
              <th>Email</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @subscribers.each_with_index do |subscriber, index| %>
              <tr>
                <td class="text-center"><%= index += 1 %></td>
                <td><%= subscriber.email %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
